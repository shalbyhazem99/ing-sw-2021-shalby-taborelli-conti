<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.WelcomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="INSERT YOUR NAME">
               <font>
                  <Font name="Algerian" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="playerName" alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Algerian" size="14.0" />
               </font>
            </TextField>
              <Button mnemonicParsing="false" onMouseClicked="#play" text="PLAY" textAlignment="CENTER">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
                  <font>
                      <Font name="Algerian" size="24.0" />
                  </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="80.0" />
         </VBox.margin>
      </VBox>
    </children>
</VBox>
